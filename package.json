{
  "name": "git-crypt-users",
  "version": "1.0.0",
  "description": "conveniently manage git-crypt users",
  "keywords": [
    "crypt",
    "git",
    "git-crypt",
    "gnupg",
    "gpg",
    "openpgp",
    "pgp"
  ],
  "homepage": "https://github.com/jokeyrhyme/git-crypt-users-js#readme",
  "bugs": {
    "url": "https://github.com/jokeyrhyme/git-crypt-users-js/issues"
  },
  "license": "MIT",
  "author": "Ron Waldon <jokeyrhyme@gmail.com> (https://github.com/jokeyrhyme)",
  "files": [
    "bin",
    "lib"
  ],
  "main": "index.js",
  "bin": {
    "git-crypt-users-import": "bin/import.js",
    "git-crypt-users-list": "bin/list.js",
    "git-crypt-users-remove": "bin/remove.js",
    "git-crypt-users-rotate": "bin/rotate.js"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokeyrhyme/git-crypt-users-js.git"
  },
  "scripts": {
    "eslint": "eslint --fix --cache .",
    "flow": "npx -q flow-bin@^0.56.0 check",
    "jest": "jest",
    "nsp": "npx -q nsp check",
    "sort-package-json": "npx -q sort-package-json",
    "pretest": "npm run prettier && npm run eslint && npm run sort-package-json",
    "test": "npm run jest && npm run nsp && npm run flow",
    "prettier": "npx -q prettier --list-different --write \"{,!(build|coverage|dist|flow-typed|typings|vendor)/**/}*.{css,js,jsx,less,scss,ts,tsx}\" || exit 0"
  },
  "dependencies": {
    "execa": "^0.10.0",
    "mkdirp": "^0.5.1",
    "openpgp": "^3.0.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "eslint": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "jest": "^21.2.1",
    "npx": "^10.0.1"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "eslintIgnore": [
    "coverage",
    "flow-typed"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
